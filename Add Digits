class Solution {
public:
    int addDigits(int n) {

        while(1){
            int sum = 0;

            while(n > 0){
                sum += (n % 10);
                n /= 10;
            }

            if((sum / 10 == 0) || sum == 0){
                return sum;
            }
            n = sum;
        }
        
    }
};
