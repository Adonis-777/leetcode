class Solution {
public:
    bool isPerfectSquare(int num) {

        typedef long long ll;

        ll l = 1, r = pow(2, 31);
        while(l <= r){
            ll mid = l + (r - l) / 2;

            if(mid*mid == num){
                return true;
            }
            else if(mid*mid > num){
                r = mid - 1;
            }
            else{
                l = mid + 1;
            }
        }

        return false;
        
    }
};
