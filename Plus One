class Solution {
public:
    vector<int> plusOne(vector<int>& a) {

        int n = a.size();

        int c = 1;
       // vector<int> ans;
        for(int i = (n - 1); i >= 0; i--){
            int sum = a[i] + c;
            a[i] = sum % 10;
            c = sum / 10;
        }

        if(c == 1){
            a.insert(a.begin(), c);
        }

        //reverse(ans.begin(), ans.end());
        return a;
        

        
        
    }
};
